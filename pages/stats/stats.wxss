/* pages/stats/stats.wxss */
.header-banner {
  padding: 40rpx 10rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #64B5F6 100%);
  margin: -30rpx -30rpx 30rpx -30rpx;
  padding: 60rpx 40rpx;
  color: white;
}

.banner-title {
  font-size: 44rpx;
  font-weight: bold;
}

.banner-desc {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: -80rpx;
  position: relative;
  z-index: 10;
}

.grid-item {
  text-align: center;
  padding: 30rpx 10rpx !important;
}

.grid-item .label {
  font-size: 22rpx;
  color: #999;
}

.grid-item .value {
  font-size: 40rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-top: 10rpx;
}

.grid-item .unit {
  font-size: 20rpx;
  color: #999;
}

.chart-container {
  padding: 40rpx 20rpx !important;
}

.chart-main {
  height: 200rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
}

.chart-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.bar-wrapper {
  flex: 1;
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 10rpx;
}

.bar {
  width: 40rpx;
  background: linear-gradient(to top, #4A90E2, #64B5F6);
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  transition: height 0.3s ease-out;
}

.bar-value {
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 18rpx;
  color: #4A90E2;
  font-weight: bold;
}

.bar-label {
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 0 20rpx 0;
  color: #333;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx !important;
}

.item-date {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.item-info {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.status-tag {
  font-size: 22rpx;
  background: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}
