/* pages/training/training.wxss */

/* 1. 容器层：全屏纯黑沉浸 */
.scifi-container {
  width: 100vw;
  height: 100vh;
  background-color: #050505;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
}

/* 2. 屏幕底层纹理：微弱放射光晕 */
.bg-texture {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.03) 0%, transparent 80%);
  pointer-events: none;
}

/* 3. 核心雷达扫描系统 */
.radar-system {
  width: 300px;
  height: 300px;
  position: absolute;
  top: 45%; /* 略微偏上，给底部数据留位置 */
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 基础圆环 */
.base-ring {
  width: 200px;
  height: 200px;
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  position: absolute;
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.scanning .base-ring {
  animation: rotateRing 10s linear infinite;
  border-top-color: rgba(255, 255, 255, 0.6);
  transform: scale(1.1);
  box-shadow: 0 0 15px rgba(255, 255, 255, 0.05);
}

/* 脉冲呼吸环 */
.pulse-ring {
  width: 200px;
  height: 200px;
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  position: absolute;
  display: none;
}

.scanning .pulse-ring {
  display: block;
  animation: pulseBreath 3s ease-in-out infinite;
}

/* 扫描光束 */
.scan-beam {
  width: 240px;
  height: 240px;
  position: absolute;
  background: conic-gradient(from 0deg, rgba(255, 255, 255, 0.1) 0deg, transparent 90deg);
  border-radius: 50%;
  display: none;
}

.scanning .scan-beam {
  display: block;
  animation: rotateBeam 3s linear infinite;
}

/* 交叉放射线 */
.radial-lines {
  width: 260px;
  height: 260px;
  position: absolute;
  background: repeating-conic-gradient(from 0deg, rgba(255, 255, 255, 0.03) 0deg 5deg, transparent 5deg 15deg);
  border-radius: 50%;
  display: none;
}

.scanning .radial-lines {
  display: block;
}

/* 聚焦状态 (Focusing) */
.focusing .base-ring {
  transform: scale(0.7);
  opacity: 0.2;
}

.focus-dot {
  width: 8px;
  height: 8px;
  background-color: #FF3B30;
  border-radius: 50%;
  box-shadow: 0 0 15px #FF3B30, 0 0 30px rgba(255, 59, 48, 0.4);
  opacity: 0;
  transition: all 0.6s ease-in-out;
}

.focusing .focus-dot {
  opacity: 1;
  transform: scale(1.3);
}

/* 4. UI 覆盖层 */
.ui-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 120rpx;
  pointer-events: none;
  box-sizing: border-box;
}

.close-btn {
  position: absolute;
  top: 100rpx; /* 避开微信胶囊按钮 */
  right: 40rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.2);
  font-size: 40rpx;
  pointer-events: auto;
  z-index: 100;
}

.stage-label {
  font-size: 24rpx;
  letter-spacing: 10rpx;
  color: rgba(255, 255, 255, 0.3);
  margin-bottom: 10rpx;
  font-weight: 300;
}

.timer-display {
  font-size: 100rpx;
  font-weight: 200;
  color: #fff;
  font-family: 'Helvetica Neue', 'Inter', sans-serif;
}

.round-indicator {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.2);
  margin-top: 30rpx;
  letter-spacing: 4rpx;
}

/* 动画定义 */
@keyframes rotateRing {
  from { transform: rotate(0deg) scale(1.1); }
  to { transform: rotate(360deg) scale(1.1); }
}

@keyframes rotateBeam {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes pulseBreath {
  0% { transform: scale(1); opacity: 0.05; }
  50% { transform: scale(1.15); opacity: 0.2; }
  100% { transform: scale(1); opacity: 0.05; }
}
