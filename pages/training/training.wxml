<view class="scifi-container">
  <!-- 核心圆环系统 -->
  <view class="radar-system {{isHolding ? 'scanning' : 'focusing'}}">
    <!-- 基础圆环 (有呼吸缩放动画) -->
    <view class="radar-ring base-ring"></view>
    
    <!-- 红色进度圆环 (仅收紧时显示) -->
    <view class="progress-ring" wx:if="{{isHolding}}"
          style="background: conic-gradient(#D65D56 {{progressDeg}}deg, transparent {{progressDeg}}deg)">
    </view>
  </view>

  <!-- 实时数据覆盖层 -->
  <view class="ui-overlay">
    <view class="close-btn" bindtap="cancelTraining">✕</view>
    <block wx:if="{{isPreparing}}">
      <view class="stage-label">准备</view>
      <view class="timer-display">{{prepareTime + 1}}</view>
      <view class="round-indicator">即将开始...</view>
    </block>
    <block wx:else>
      <view class="stage-label">{{isHolding ? '收紧' : '放松'}}</view>
      <view class="timer-display">{{currentTime}}s</view>
      <view class="round-indicator">第 {{currentRound}} / {{totalRounds}} 组</view>
      <view class="end-training-btn" bindtap="cancelTraining">结束训练</view>
    </block>
  </view>
</view>
